               Height="87" 
               Margin="135,621,0,0" 
               VerticalAlignment="Top" 
               Width="295" 
               Foreground="#FF000C8B" FontSize="20" FontFamily="Rockwell"/>

        <Label Content="Что мы предоставляем:" 
               HorizontalAlignment="Left" 
               Height="57" 
               Margin="759,122,0,0" 
               VerticalAlignment="Top" 
               Width="431" 
               Foreground="#FF000C8B" 
               FontSize="36"/>

        <Button Content="ПОДРОБНЕЕ" 
                HorizontalAlignment="Left" 
                Height="51" 
                Margin="646,631,0,0" 
                VerticalAlignment="Top"
                Width="193" Background="{x:Null}" 
